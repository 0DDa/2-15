#include <iostream>
#include <limits.h>
using namespace std;
int main ()
{
	setlocale (LC_ALL, "Russian");
	int n;
	cout << "n = ";
	cin >> n;
	int **a = new int *[n];
	for (int i = 0; i < n; i++)
		a[i] = new int [n];
	cout << "Введите элементы массива\n";
	for (int i = 0; i < n; i++)
		for (int j = 0; j < n; j++)
			{
			cout << "a[" << i << "][" << j << "] = ";
			cin >> a[i][j];
			}
	int max, min, imin, jmin, imax, jmax;
	max = INT_MIN;
	min = INT_MAX;
	for (int i = 0; i < n; i++)
		for (int j = 0; j < n; j++)
		{
			if (i>=j && a[i][j] < min && a[i][j]%2 ==0)
			{
				min = a[i][j];
				imin = i;
				jmin = j;
			}
			if (i<j && a[i][j] > max && a[i][j]%2 !=0)
			{
				max = a[i][j];
				imax = i;
				jmax = j;
			}
		}
	if (max == INT_MIN)
		cout << "Нет четных элементов\n";
	else if (min == INT_MAX)
		cout << "Нет нечетных элементов\n";
	else
		swap (a[imin][jmin], a[imax][jmax]);
	cout << "Новый массив\n";
	for (int i = 0; i < n; i++, cout << endl)
		for (int j = 0; j < n; j++)
		cout <<  a[i][j] <<"\t";
	system ( "pause" );
	return 0;
}
