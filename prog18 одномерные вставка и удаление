#include <iostream>
#include <limits.h>
using namespace std;
int main ()
{
setlocale (LC_ALL, "Russian");
int n, i, j;
cout << "n=";
cin >> n;
int *a = new int [2*n];
cout << "Введите элементы массива\n";
for (i = 0; i < n; i++)
cin >> a[i];
int x;
cout << "x=";
cin >> x;
for (i = 0; i < n; i++)
{
if (a[i] % 2 == 0)
{
for (j = n; j > i; j--)
a[j] = a[j-1];
a[i+1] = x;
n++;
i++;
}
}
cout << "Новый массив\n";
for (i = 0; i < n; i++)
cout << a[i] << " ";
delete []a;
return 0;
}
