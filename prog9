#include <iostream>
#include <limits.h>
using namespace std;
int main() {
	setlocale (LC_ALL, "Russian");
	int n;
	cout << "n = ";
	cin >> n;
	int **a = new int *[n];
	for ( int i = 0; i < n; ++i)
	{
		a[i] = new int [n];
	}
	for (int i = 0; i < n; ++i)
	{
		for (int j = 0; j < n; ++j)
		{
			cout << "a[" << i << "][" << j <<"] = ";
			cin >> a[i][j];
		}
	}
	int min = a[0][0], max = a[0][0], imin = 0, imax = 0;
	for (int i=0; i<n; i++)
		for (int j = 0; j < n; j++)
		{
			if (a[i][j] < min)
			{
				min = a[i][j];
				imin = i;
			}
			if (a[i][j] >= max)
			{
				max = a[i][j];
				imax = i;
			}
		}
	for (int j = 0; j < n; j++)
		swap (a[imin][j], a[imax][j]);
	cout << "Новый массив\n";
	for (int i=0; i<n; i++, cout << endl)
		for (int j = 0; j < n; j++)
			cout << a[i][j] << "\t";
	system ( "pause" );
	return 0;
}
